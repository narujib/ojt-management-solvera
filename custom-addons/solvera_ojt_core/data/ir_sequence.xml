<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">
    <!-- Batch sequence -->
    <record id="seq_ojt_batch" model="ir.sequence">
        <field name="name">OJT Batch</field>
        <field name="code">ojt.batch.seq</field>
        <field name="prefix">OJTBATCH/%(year)s/</field>
        <field name="padding">5</field>
        <field name="company_id" eval="False"/>
        <field name="implementation">no_gap</field>
    </record>

    <!-- Certificate sequence -->
    <record id="seq_ojt_certificate" model="ir.sequence">
        <field name="name">OJT Certificate</field>
        <field name="code">ojt.certificate.seq</field>
        <field name="prefix">OJTCERT/%(year)s/</field>
        <field name="padding">6</field>
        <field name="company_id" eval="False"/>
        <field name="implementation">no_gap</field>
    </record>
</odoo>
