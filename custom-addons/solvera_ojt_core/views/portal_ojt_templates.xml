<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Portal: add OJT entry on home -->
    <template id="portal_my_ojt_home_menu"
              name="Portal : OJT menu on Home"
              inherit_id="portal.portal_my_home"
              priority="90">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <a href="/my/ojt"
               class="list-group-item list-group-item-action d-flex align-items-center justify-content-between"
               title="OJT">
                <span>OJT</span>
            </a>
        </xpath>
    </template>

    <!-- Portal: dashboard (cards + pager) -->
    <template id="portal_my_ojt_dashboard" name="My OJT">
        <t t-call="portal.portal_layout">
            <div class="container mt16 o_my_ojt">
                <div class="row">
                    <div class="col-12">
                        <h3 class="mb16">My OJT</h3>
                    </div>
                </div>

                <div class="row">
                    <t t-if="not participants">
                        <div class="col-12">
                            <div class="alert alert-info">No OJT record yet.</div>
                        </div>
                    </t>
                    <t t-foreach="participants" t-as="p">
                        <div class="col-12 col-md-6 mb16">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <a t-att-href="'/my/ojt/participant/%s' % p.id">
                                            <t t-esc="p.name"/>
                                        </a>
                                    </h5>
                                    <p class="card-text">
                                        Batch:
                                        <strong><t t-esc="p.batch_id.display_name"/></strong>
                                        <br/>
                                        Attendance:
                                        <strong><t t-esc="'%.2f' % p.attendance_rate"/></strong>%
                                        <span class="mx-1">|</span>
                                        Final Score:
                                        <strong><t t-esc="'%.2f' % p.final_score"/></strong>
                                    </p>
                                    <a class="btn btn-primary btn-sm" t-att-href="'/my/ojt/participant/%s' % p.id">View details</a>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>

                <!-- Pager: pass full dict to template -->
                <t t-if="pager">
                    <t t-call="portal.pager">
                        <t t-set="url">/my/ojt</t>
                        <t t-set="page_count" t-value="pager['page_count']"/>
                        <t t-set="current_page" t-value="pager['page']"/>
                        <t t-set="pager" t-value="pager"/>
                    </t>
                </t>
            </div>
        </t>
    </template>

    <!-- Portal: participant detail (back link + three blocks) -->
    <template id="portal_my_ojt_participant_detail" name="OJT Detail">
        <t t-call="portal.portal_layout">
            <div class="container mt16 o_my_ojt_detail">
                <div class="row mb16">
                    <div class="col-12">
                        <!-- Back: use ret if present -->
                        <a t-att-href="ret or '/my/ojt'" class="btn btn-secondary btn-sm">← Back</a>
                    </div>
                </div>

                <div class="row mb8">
                    <div class="col-12">
                        <h4><t t-esc="participant.name"/></h4>
                        <p>
                            Batch:
                            <strong><t t-esc="participant.batch_id.display_name"/></strong>
                            <span class="mx-1">|</span>
                            Attendance:
                            <strong><t t-esc="'%.2f' % participant.attendance_rate"/></strong>%
                            <span class="mx-1">|</span>
                            Final Score:
                            <strong><t t-esc="'%.2f' % participant.final_score"/></strong>
                        </p>
                    </div>
                </div>

                <div class="row">
                    <!-- Block: assignments/submissions -->
                    <div class="col-12 col-lg-6 mb16">
                        <div class="card">
                            <div class="card-header"><strong>Assignments</strong></div>
                            <div class="card-body p-0">
                                <table class="table table-sm mb-0">
                                    <thead>
                                        <tr>
                                            <th>Title</th>
                                            <th class="text-end">Score</th>
                                            <th class="text-end">Created</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-if="not submissions">
                                            <tr>
                                                <td colspan="3" class="text-center text-muted py-3">No submissions yet.</td>
                                            </tr>
                                        </t>
                                        <t t-foreach="submissions" t-as="s">
                                            <tr>
                                                <td><t t-esc="s.assignment_id.display_name"/></td>
                                                <td class="text-end"><t t-esc="s.score if s.score is not None else '-'"/></td>
                                                <td class="text-end"><t t-esc="s.create_date"/></td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <!-- Block: attendance -->
                    <div class="col-12 col-lg-6 mb16">
                        <div class="card">
                            <div class="card-header"><strong>Attendance</strong></div>
                            <div class="card-body p-0">
                                <table class="table table-sm mb-0">
                                    <thead>
                                        <tr>
                                            <th>Session</th>
                                            <th class="text-end">Created</th>
                                            <th class="text-end">Presence</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-if="not attendance">
                                            <tr>
                                                <td colspan="3" class="text-center text-muted py-3">No attendance yet.</td>
                                            </tr>
                                        </t>
                                        <t t-foreach="attendance" t-as="a">
                                            <tr>
                                                <td><t t-esc="a.event_link_id.title or a.event_link_id.display_name"/></td>
                                                <td class="text-end"><t t-esc="a.create_date"/></td>
                                                <td class="text-end"><t t-esc="a.presence"/></td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <!-- Block: certificates -->
                    <div class="col-12 mb16">
                        <div class="card">
                            <div class="card-header"><strong>Certificates</strong></div>
                            <div class="card-body p-0">
                                <table class="table table-sm mb-0">
                                    <thead>
                                        <tr>
                                            <th>Certificate</th>
                                            <th>Serial</th>
                                            <th>Issued On</th>
                                            <th class="text-end">State</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-set="certs" t-value="certificates"/>
                                        <t t-if="not certs">
                                            <tr>
                                                <td colspan="4" class="text-center text-muted py-3">No certificates.</td>
                                            </tr>
                                        </t>
                                        <t t-foreach="certs" t-as="c">
                                            <tr>
                                                <td><t t-esc="c.name"/></td>
                                                <td><t t-esc="c.serial_number or '-'"/></td>
                                                <td><t t-esc="c.issued_on or '-'"/></td>
                                                <td class="text-end"><t t-esc="c.state"/></td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </t>
    </template>

    <!-- Portal: add Join/QR action column on Attendance -->
    <template id="portal_my_ojt_participant_detail_join_action"
              inherit_id="solvera_ojt_core.portal_my_ojt_participant_detail">
        <!-- Column header: Action -->
        <xpath expr="//div[contains(@class,'card-header')][contains(normalize-space(),'Attendance')]/following-sibling::div//thead/tr"
               position="inside">
            <th class="text-end">Action</th>
        </xpath>

        <!-- Row cell: Join button, QR PNG, or dash -->
        <xpath expr="//div[contains(@class,'card-header')][contains(normalize-space(),'Attendance')]/following-sibling::div//tbody/t[@t-foreach][@t-as='a']/tr"
               position="inside">
            <td class="text-end">
                <t t-if="a.qr_token">
                    <t t-if="a.event_link_id and a.event_link_id.online_meeting_url">
                        <a t-att-href="a.join_url"
                           class="btn btn-primary btn-sm"
                           target="_blank" rel="noopener">Join Meeting</a>
                    </t>
                    <a t-att-href="'/ojt/qrpng/%s?mode=checkin' % a.qr_token"
                       class="btn btn-secondary btn-sm"
                       target="_blank" rel="noopener">QR Check-in</a>
                </t>
                <t t-else="">
                    <span class="text-muted">-</span>
                </t>
            </td>
        </xpath>
    </template>

    <!-- Page: QR PNG viewer (client-generated) -->
    <template id="portal_ojt_qr_png" name="OJT QR PNG">
        <t t-call="portal.portal_layout">
            <t t-set="val" t-value="qr_value"/>
            <div class="container mt16">
                <h4>Scan QR</h4>
                <div class="my-3 d-flex justify-content-center">
                    <img id="qrimg" alt="QR" width="512" height="512"/>
                </div>
                <div class="text-center">
                    <a id="qr_dl" download="ojt-qr.png" class="btn btn-secondary btn-sm">Download PNG</a>
                </div>
            </div>

            <!-- QR library (has QRCode.toDataURL API) -->
            <script src="https://cdn.jsdelivr.net/npm/qrcode@1.5.1/build/qrcode.min.js"></script>
            <script>
                (function () {
                    var val = "<t t-esc='val'/>";
                    var img = document.getElementById('qrimg');
                    var dl  = document.getElementById('qr_dl');

                    function fail(msg){
                        img.alt = msg || 'Failed to generate QR';
                    }

                    if (!window.QRCode) return fail('QR library failed to load');

                    QRCode.toDataURL(val, { width: 512, margin: 1 }, function (err, url) {
                        if (err || !url) return fail('Could not render QR');
                        img.src = url;
                        if (dl) dl.href = url;
                    });
                })();
            </script>
        </t>
    </template>

    <!-- Page: QR success -->
    <template id="portal_ojt_qr_success" name="OJT QR Success">
        <t t-call="portal.portal_layout">
            <div class="container mt16">
                <div class="alert alert-success">
                    <strong><t t-esc="message or 'Check-in recorded.'"/></strong>
                </div>
                <a href="/my/ojt" class="btn btn-secondary btn-sm">Back to My OJT</a>
            </div>
        </t>
    </template>

    <!-- Page: join info when meeting link is missing -->
    <template id="portal_ojt_join_info" name="OJT Join Info">
        <t t-call="portal.portal_layout">
            <div class="container mt16">
                <div class="alert alert-warning">
                    <strong>Meeting link is not available.</strong>
                </div>
                <a href="/my/ojt" class="btn btn-secondary btn-sm">Back to My OJT</a>
            </div>
        </t>
    </template>

    <!-- Page: external redirect fallback for meeting links -->
    <template id="portal_ojt_redirect" name="OJT External Redirect">
        <t t-call="portal.portal_layout">
            <t t-set="dest" t-value="target_url"/>
            <t t-if="dest">
                <meta t-att-content="'0;url=%s' % dest" http-equiv="refresh"/>
                <div class="container mt16">
                    <div class="alert alert-info">
                        Redirecting to the meeting…
                        If nothing happens, <a t-att-href="dest" target="_blank" rel="noopener">click here</a>.
                    </div>
                </div>
                <script>
                    (function(){
                        try { window.location.replace("<t t-esc='dest'/>"); }
                        catch(e) { window.location.href = "<t t-esc='dest'/>"; }
                    })();
                </script>
            </t>
            <t t-else="">
                <div class="container mt16">
                    <div class="alert alert-warning">Meeting link is not available.</div>
                </div>
            </t>
        </t>
    </template>

    <!-- Page: client-side QR canvas (no /report/barcode) -->
    <template id="portal_ojt_qr_client" name="OJT QR Canvas">
        <t t-call="portal.portal_layout">
            <t t-set="qrval" t-value="qr_value"/>
            <div class="container mt16">
                <h4>Scan QR</h4>
                <div id="qrwrap" class="my-3 d-flex justify-content-center"></div>
                <div class="text-center">
                    <a t-att-href="qrval" target="_blank" rel="noopener" class="btn btn-link btn-sm">Open link</a>
                </div>
            </div>

            <!-- CDN: QRCode.js -->
            <script src="https://cdn.jsdelivr.net/npm/qrcode@1.5.1/build/qrcode.min.js"></script>
            <script>
                (function () {
                    var val = "<t t-esc='qrval'/>";
                    var el = document.getElementById('qrwrap');
                    if (!el) return;
                    if (window.QRCode) {
                        new QRCode(el, { text: val, width: 512, height: 512 });
                    } else {
                        el.innerHTML = '<p>QR library failed to load. ' +
                                       '<a href="'+ val +'" target="_blank" rel="noopener">Open link</a></p>';
                    }
                })();
            </script>
        </t>
    </template>

</odoo>
