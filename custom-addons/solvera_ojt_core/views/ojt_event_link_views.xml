<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- List view: compact listing of event links -->
    <record id="view_ojt_event_link_list" model="ir.ui.view">
        <field name="name">ojt.event.link.list</field>
        <field name="model">ojt.event.link</field>
        <field name="arch" type="xml">
            <list string="Event Links">
                <field name="batch_id"/>
                <field name="event_id"/>
                <field name="title"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="instructor_id"/>
                <field name="mandatory"/>
                <field name="weight"/>
            </list>
        </field>
    </record>

    <!-- Form view: editor with smart counters -->
    <record id="view_ojt_event_link_form" model="ir.ui.view">
        <field name="name">ojt.event.link.form</field>
        <field name="model">ojt.event.link</field>
        <field name="arch" type="xml">
            <form string="Event Link">
                <sheet>
                    <!-- Smart buttons: related records counters -->
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_open_participants" icon="fa-users">
                            <field name="participants_count" widget="statinfo" string="Participants"/>
                        </button>
                        <button class="oe_stat_button" type="object" name="action_open_attendance" icon="fa-check-square">
                            <field name="attendance_count" widget="statinfo" string="Attendance"/>
                        </button>
                        <button class="oe_stat_button" type="object" name="action_open_assignments" icon="fa-tasks">
                            <field name="assignments_count" widget="statinfo" string="Assignments"/>
                        </button>
                    </div>

                    <!-- Groups: identity and schedule -->
                    <group col="2">
                        <group>
                            <field name="batch_id"/>
                            <field name="event_id"/>
                            <field name="title" readonly="1"/>
                            <field name="instructor_id"/>
                            <field name="mandatory"/>
                            <field name="weight"/>
                        </group>
                        <group>
                            <field name="date_start"/>
                            <field name="date_end"/>
                            <field name="online_meeting_url" widget="url"/>
                        </group>
                    </group>

                    <!-- Notes: technical details -->
                    <group>
                        <field name="notes" placeholder="Technical notes, room/URL details, etc."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Calendar view: time-based agenda by instructor color -->
    <record id="view_ojt_event_link_calendar" model="ir.ui.view">
        <field name="name">ojt.event.link.calendar</field>
        <field name="model">ojt.event.link</field>
        <field name="arch" type="xml">
            <calendar string="Event Calendar" date_start="date_start" date_stop="date_end" color="instructor_id">
                <field name="title"/>
                <field name="batch_id"/>
                <field name="instructor_id"/>
                <field name="mandatory"/>
            </calendar>
        </field>
    </record>

</odoo>
