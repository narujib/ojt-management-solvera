<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- LIST view -->
    <record id="view_ojt_batch_list" model="ir.ui.view">
        <field name="name">ojt.batch.list</field>
        <field name="model">ojt.batch</field>
        <field name="arch" type="xml">
            <list string="OJT Batches">
                <field name="name"/>
                <field name="code"/>
                <field name="job_id" readonly="1"/>
                <field name="department_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="mode"/>
                <field name="mentor_ids" widget="many2many_tags"/>
                <field name="capacity"/>
                <field name="is_published" widget="boolean_toggle" readonly="state != 'recruitment'"/>
                <field name="progress_ratio" widget="progressbar"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- FORM view -->
    <record id="view_ojt_batch_form" model="ir.ui.view">
        <field name="name">ojt.batch.form</field>
        <field name="model">ojt.batch</field>
        <field name="arch" type="xml">
            <form string="OJT Batch">
                <sheet>
                    <header>
                        <button name="action_set_recruitment" type="object" string="Open Recruitment"
                                class="btn-secondary" invisible="state != 'draft'"/>
                        <button name="action_set_ongoing" type="object" string="Start"
                                class="btn-primary" invisible="state != 'recruitment'"/>
                        <button name="action_set_done" type="object" string="Mark Done"
                                class="btn-secondary" invisible="state != 'ongoing'"/>
                        <button name="action_set_cancel" type="object" string="Cancel"
                                class="btn-danger" invisible="not (state in ['draft', 'ongoing'])"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,recruitment,ongoing,done,cancel"/>
                        <field name="is_published" widget="boolean_toggle" nolabel="1" readonly="state != 'recruitment'"/>
                    </header>

                    <div class="oe_button_box" name="button_box">
                        <!-- Smart buttons reserved for future use -->
                    </div>

                    <group col="2">
                        <group string="Batch">
                            <field name="name"/>
                            <field name="code" readonly="1"/>
                            <field name="job_id" readonly="1" help="Linked HR Job (auto-synced from Batch)."/>
                            <field name="department_id"/>
                            <field name="mode"/>
                            <field name="mentor_ids" widget="many2many_tags"/>
                        </group>
                        <group string="Schedule &amp; Rules">
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="capacity"/>
                            <field name="attendance_threshold"/>
                            <field name="score_threshold"/>
                            <field name="progress_ratio" widget="progressbar" readonly="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Description">
                            <field name="description" placeholder="Short summary, objectives, notes..."/>
                        </page>

                        <page string="Participants">
                            <field name="participant_ids">
                                <list editable="bottom">
                                    <field name="name" readonly="1"/>
                                    <field name="partner_id"/>
                                    <field name="applicant_id" domain="[('job_id', '=', parent.job_id)]"/>
                                    <field name="attendance_rate"/>
                                    <field name="average_score"/>
                                    <field name="final_score"/>
                                    <field name="mentor_score"/>
                                    <field name="state"/>
                                </list>
                                <form>
                                    <group col="2">
                                        <group string="Identity">
                                            <field name="name" readonly="1"/>
                                            <field name="partner_id" required="1"/>
                                            <field name="applicant_id" domain="[('job_id', '=', parent.job_id)]"/>
                                            <field name="portal_token"/>
                                        </group>
                                        <group string="Scores &amp; Attendance">
                                            <field name="attendance_rate"/>
                                            <field name="average_score"/>
                                            <field name="final_score"/>
                                            <field name="mentor_score"/>
                                        </group>
                                    </group>
                                    <group>
                                        <field name="notes"/>
                                    </group>
                                </form>
                            </field>
                        </page>

                        <page string="Event Links">
                            <field name="event_link_ids">
                                <list editable="bottom">
                                    <field name="event_id"/>
                                    <field name="title" readonly="1"/>
                                    <field name="date_start"/>
                                    <field name="date_end"/>
                                    <field name="instructor_id"/>
                                    <field name="mandatory"/>
                                    <field name="weight"/>
                                </list>
                                <form>
                                    <group col="2">
                                        <group>
                                            <field name="event_id"/>
                                            <field name="title" readonly="1"/>
                                            <field name="instructor_id"/>
                                            <field name="mandatory"/>
                                            <field name="weight"/>
                                        </group>
                                        <group>
                                            <field name="date_start"/>
                                            <field name="date_end"/>
                                            <field name="online_meeting_url" widget="url"/>
                                        </group>
                                    </group>
                                    <group>
                                        <field name="notes"/>
                                    </group>
                                </form>
                            </field>
                        </page>

                        <page string="Courses">
                            <field name="course_ids" widget="many2many_tags"/>
                        </page>
                    
                        <page string="Assignments">
                            <field name="assignment_ids">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="event_link_id" domain="[('batch_id', '=', parent.id)]"/>
                                    <field name="type"/>
                                    <field name="deadline"/>
                                    <field name="max_score"/>
                                    <field name="weight"/>
                                    <field name="state"/>
                                    <field name="submit_count"/>
                                </list>
                                <form>
                                    <group col="2">
                                        <group>
                                            <field name="name"/>
                                            <field name="event_link_id" domain="[('batch_id', '=', parent.id)]"/>
                                            <field name="type"/>
                                        </group>
                                        <group>
                                            <field name="deadline"/>
                                            <field name="max_score"/>
                                            <field name="weight"/>
                                            <field name="attachment_required"/>
                                        </group>
                                    </group>
                                    <group>
                                        <field name="description"/>
                                    </group>
                                </form>
                            </field>
                        </page>

                        <page string="Attendance">
                            <field name="attendance_ids">
                                <list editable="bottom">
                                    <field name="event_link_id" domain="[('batch_id', '=', parent.id)]"/>
                                    <field name="participant_id" domain="[('batch_id', '=', parent.id)]"/>
                                    <field name="check_in"/>
                                    <field name="check_out"/>
                                    <field name="presence"/>
                                    <field name="method"/>
                                    <field name="duration_minutes"/>
                                </list>
                                <form>
                                    <group col="2">
                                        <group>
                                            <field name="event_link_id" domain="[('batch_id', '=', parent.id)]"/>
                                            <field name="participant_id" required="1" domain="[('batch_id', '=', parent.id)]"/>
                                            <field name="presence"/>
                                            <field name="method"/>
                                        </group>
                                        <group>
                                            <field name="check_in"/>
                                            <field name="check_out"/>
                                            <field name="duration_minutes" readonly="1"/>
                                        </group>
                                    </group>
                                    <group>
                                        <field name="notes"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
