<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Action: open Batch records with kanban/list/form -->
    <record id="action_ojt_batch" model="ir.actions.act_window">
        <field name="name">Batches</field>
        <field name="res_model">ojt.batch</field>
        <field name="view_mode">kanban,list,form</field>
        <!-- Empty-state help -->
        <field name="help" type="html">
            <p>Create and manage OJT batches here.</p>
        </field>
    </record>

    <!-- Root menu: top-level entry for OJT -->
    <menuitem id="menu_ojt_root" name="OJT Management" sequence="10"/>

    <!-- Child menu: opens Batch action under root -->
    <menuitem
        id="menu_ojt_batch"
        name="Batches"
        parent="menu_ojt_root"
        action="action_ojt_batch"
        sequence="10"
    />

</odoo>
